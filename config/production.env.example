# ElizaOS Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ================================
# CORE PRODUCTION SETTINGS
# ================================
NODE_ENV=production
LOG_LEVEL=warn

# ================================
# SECURITY CONFIGURATION
# ================================

# Disable dashboard completely
DISABLE_DASHBOARD=true
API_ONLY_MODE=true

# API Key for authentication (GENERATE A STRONG RANDOM KEY)
# Use: openssl rand -base64 32
API_KEY=your-super-secure-api-key-replace-this

# CORS - Only allow your frontend domain(s)
# Multiple domains: domain1.com,domain2.com,domain3.com
ALLOWED_ORIGINS=https://eliza-os-sooty.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100    # Max requests per window
RATE_LIMIT_ENABLED=true

# ================================
# DATABASE CONFIGURATION
# ================================

# Production database URL
# PostgreSQL recommended for production
DATABASE_URL=postgresql://username:password@host:port/database_name

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ================================
# AI PROVIDER KEYS
# ================================

# OpenAI (recommended for production)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google AI (optional)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-key

# OpenRouter (optional fallback)
OPENROUTER_API_KEY=sk-or-your-openrouter-key

# ================================
# PERFORMANCE SETTINGS
# ================================

# Use faster models for production
MODEL_PROVIDER=openai
MODEL_NAME=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Memory limits
MAX_MEMORIES=1000
MEMORY_DECAY=0.95

# Response optimization
STREAMING_ENABLED=true
BATCH_SIZE=5

# ================================
# DISABLED FEATURES
# ================================

# Disable unnecessary plugins for production
IGNORE_BOOTSTRAP=true
DISABLE_PLUGINS=discord,twitter,telegram

# Disable debug features
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ================================
# HOSTING PLATFORM SPECIFIC
# ================================

# Railway
RAILWAY_ENVIRONMENT=production

# Render
# RENDER=true

# Heroku
# DYNO=web.1

# Custom port (platform will set this automatically)
PORT=3000

# ================================
# ELIZAOS SPECIFIC SETTINGS
# ================================

# Database (Railway PostgreSQL)
# Railway will automatically provide DATABASE_URL
# DATABASE_URL=postgresql://username:password@host:port/database

# Character Configuration
CHARACTER_NAME=Purl
CHARACTER_MODEL=gpt-4o-mini

# Plugin Configuration
IGNORE_BOOTSTRAP=false

# ================================
# MONITORING & ALERTS
# ================================

# Error reporting (optional)
# SENTRY_DSN=your-sentry-dsn

# Health check settings
HEALTH_CHECK_ENABLED=true

# ================================
# BACKUP SETTINGS
# ================================

# Automatic database backups (if supported)
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# ================================
# SECURITY HEADERS
# ================================

# Additional security settings
HELMET_ENABLED=true
SECURE_COOKIES=true
FORCE_HTTPS=true
